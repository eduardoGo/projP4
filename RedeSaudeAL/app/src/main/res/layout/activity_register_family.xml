<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GUI.RegisterFamilyScreen">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="96dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="16dp"
        android:text="Cadastrar Familia"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/registerFamilyScreenFinish"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/registerFamilyScreenRegisterMember"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginEnd="3dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="38dp"
        android:text="Cadastrar individuo"
        app:layout_constraintEnd_toStartOf="@+id/registerFamilyScreenFinish"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ListView
        android:id="@+id/registerFamilyScreenList"
        android:layout_width="368dp"
        android:layout_height="347dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <Button
        android:id="@+id/registerFamilyScreenFinish"
        android:layout_width="100dp"
        android:layout_height="56dp"
        android:layout_marginBottom="36dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="37dp"
        android:text="Finalizar cadastro"
        app:layout_constraintBottom_toTopOf="@+id/registerFamilyScreenList"
        app:layout_constraintEnd_toStartOf="@+id/registerFamilyScreenExit"
        app:layout_constraintStart_toEndOf="@+id/registerFamilyScreenRegisterMember"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/registerFamilyScreenExit"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginTop="86dp"
        android:layout_marginBottom="36dp"
        android:text="Cancelar"
        app:layout_constraintBottom_toTopOf="@+id/registerFamilyScreenList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/registerFamilyScreenFinish"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginEnd="223dp"
        android:layout_marginStart="16dp"
        android:text="Individuos cadastrados"
        app:layout_constraintBottom_toTopOf="@+id/registerFamilyScreenList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerFamilyScreenRegisterMember" />

</android.support.constraint.ConstraintLayout>